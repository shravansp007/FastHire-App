<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="12dp"
    android:elevation="4dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/feedEmployerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Employer Name"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/feedEmployerMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile" />

        <TextView
            android:id="@+id/feedDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date" />

        <TextView
            android:id="@+id/feedFrom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From" />

        <TextView
            android:id="@+id/feedTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btnInterested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interested" />

            <Button
                android:id="@+id/btnNotInterested"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not interested"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
